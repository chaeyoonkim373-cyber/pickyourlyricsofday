  <script>
    // ì´ ì´ë¯¸ì§€ ê°œìˆ˜
    const totalImages = 20;

    // ì„¸ì…˜ ì €ì¥: ìƒˆë¡œê³ ì¹¨í•´ë„ ê°™ì€ ì´ë¯¸ì§€ ìœ ì§€
    let selectedImage = sessionStorage.getItem("selectedImage");

    if (!selectedImage) {
      const randomNumber = Math.floor(Math.random() * totalImages) + 1;
      selectedImage = `assets/img${randomNumber}.jpeg`; // ì´ë¯¸ì§€ ê²½ë¡œ
      sessionStorage.setItem("selectedImage", selectedImage);
    }

    document.getElementById("randomImage").src = selectedImage;

    // ìš°í´ë¦­ ë°©ì§€
    document.addEventListener("contextmenu", e => e.preventDefault());

    // ëª¨ë°”ì¼ ìƒˆë¡œê³ ì¹¨ ì œìŠ¤ì²˜ ë°©ì§€
    let touchStartY = 0;
    document.addEventListener("touchstart", e => { touchStartY = e.touches[0].clientY; });
    document.addEventListener("touchmove", e => {
      if (touchStartY < 10) e.preventDefault();
    }, { passive: false });
